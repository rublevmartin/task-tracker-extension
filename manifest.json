{
    "manifest_version": 3,
    "name": "Task Tracker Extension",
    "version": "1.0.0",
    "description": "Chrome Extension - Task Tracker",
    "author": "Martin Rublev",
    "permissions": ["tabs", "storage", "sidePanel"],
    "action": {
        "default_title": "Task Tracker Extension"
    },
    "side_panel": {
        "default_path": "side_panel.html"
    },
    "background": {
        "service_worker": "background.js"
    }
  }